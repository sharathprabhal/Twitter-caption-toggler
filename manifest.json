{
  "manifest_version": 2,
  "name": "Twitter gallery caption toggler",
  "version": "0.1",
  "description": "Hides the caption that Twiiter shows when displaying media.",
  "icons": { "16": "images/icon-16.png" },
  "background": {
    "persistent": false,
    "scripts": ["script.js"]
  },
  "permissions": [
    "tabs", "https://twitter.com/"
  ],
  "page_action": {
    "default_icon": {
      "19": "images/icon-24.png",
      "38": "images/icon-32.png"
    },
    "default_title": "Hide Caption"
  }
}
